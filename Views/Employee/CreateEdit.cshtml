


@model ViewComponentEmployee.Models.Employee

@{
    ViewData["Title"] = "CreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Create Employee</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Employee" autocomplete="off">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" asp-for="empname" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Department</label>
                <input type="text" asp-for="Department" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>





